<body>

    <!-- Main container with login sections -->
    <div class="container">
        <!-- Customer Login Section -->
        <div class="section">
            <h2>Customer Login</h2>
            <form id="loginForm">
                <label>Username</label><input type="text" id="loginUsername" required>
                <label>Password</label><input type="password" id="loginPassword" required>
                <button type="submit">Login</button>
                <!-- Link to show the registration form -->
                <a class="link" onclick="showRegistrationForm()">Create Account</a>
            </form>
        </div>

        <!-- Employee Login Section -->
        <div class="section">
            <h2>Employee Login</h2>
            <form id="employeeLoginForm">
                <label>Username</label><input type="text" id="employeeUsername" value="User1" readonly>
                <label>Password</label><input type="password" id="employeePassword" required>
                <button type="submit">Login as Employee</button>
            </form>
        </div>
    </div>

    <!-- Registration Form Section -->
    <div id="registrationSection" class="section" style="display: none;">
        <h2>Create New Account</h2>
        <form id="registrationForm">
            <label>Username</label><input type="text" id="regUsername" required>
            <label>Email</label><input type="email" id="regEmail" required>
            <label>Phone Number</label><input type="tel" id="regPhone" required>
            <label>Password</label><input type="password" id="regPassword" required>
            <button type="submit">Register</button>
            <a class="link" onclick="showLoginForm()">Already have an account? Log in</a>
        </form>
    </div>

    <!-- Additional sections for bookings, confirmations, and admin functionality -->
    <!-- Booking Section -->
    <div id="bookingSection" class="section" style="display: none;">
        <h2>Book a Room</h2>
        <form id="bookingForm">
            <!-- Room selection dropdown -->
            <label>Select Room</label>
            <select id="bookingRoom" required>
                <option value="Single">Single - $100/night</option>
                <option value="Double">Double - $150/night</option>
                <option value="Suite">Suite - $250/night</option>
            </select>
            <!-- Date input fields -->
            <label>Check-in Date</label><input type="date" id="checkinDate" required>
            <label>Check-out Date</label><input type="date" id="checkoutDate" required>
            <!-- Payment details -->
            <label>Credit Card Number</label><input type="text" id="cardNumber" required>
            <label>Expiry Date</label><input type="text" id="expiryDate" required>
            <label>CVV</label><input type="text" id="cvv" required>
            <button type="submit">Book Room</button>
        </form>
    </div>

    <script>
        // Room data array to manage room information
        const rooms = [
            { size: 'Single', cost: 100, capacity: 1, isBooked: false },
            { size: 'Double', cost: 150, capacity: 2, isBooked: true },
            { size: 'Suite', cost: 250, capacity: 4, isBooked: false }
        ];

        // Function to display the registration form
        function showRegistrationForm() {
            document.querySelector('.container').style.display = 'none';
            document.getElementById('registrationSection').style.display = 'block';
        }

        // Function to show the login form
        function showLoginForm() {
            document.getElementById('registrationSection').style.display = 'none';
            document.querySelector('.container').style.display = 'flex';
        }

        // Function to handle customer registration
        document.getElementById('registrationForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const username = document.getElementById('regUsername').value;
            const email = document.getElementById('regEmail').value;
            const phone = document.getElementById('regPhone').value;
            const password = document.getElementById('regPassword').value;
            // Save user data to localStorage
            localStorage.setItem(username, JSON.stringify({ email, phone, password }));
            alert("Account created successfully!");
            showBookingPage();
            document.getElementById('registrationForm').reset();
        });

        // Other event listeners and helper functions omitted for brevity
    </script>
</body>
